Name: "{group}\{cm:UninstallProgram,Digital & Analog Laboratory}"; Filename: "{uninstallexe}"
Name: "{userdesktop}\Digital & Analog Laboratory"; Filename: "{app}\DiALab.exe"; Tasks: desktopicon

[Run]
